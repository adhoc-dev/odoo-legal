<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_legal_audiences_filter" model="ir.ui.view">
            <field name="name">legal.audiences.select</field>
            <field name="model">legal.audiences</field>
            <field name="arch" type="xml">
                <search string="audiences" version="7.0">
                    <group string="By Attribute">
                        <field name="type_id"/>
                        <field name="date"/>
                        <field name="state"/>
                        <field name="prosecution_id"/>
                    </group>
                    <group expand="1" string="Group By...">
                        <filter string="Type" icon="terp-personal" domain="[]" context="{'group_by':'type_id'}" />
                        <filter string="Date" icon="terp-partner" context="{'group_by':'date'}"/>
                        <filter string="Prosecution" icon="terp-partner" context="{'group_by':'prosecution_id'}"/>
                        <filter string="State" icon="terp-partner" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- FORM -->
        <record id="view_legal_audiences_form" model="ir.ui.view">
            <field name="name">legal.audiences.form</field>
            <field name="model">legal.audiences</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="type_id"/>
                        <field name="observations"/>
                        <field name="date"/>
                        <field name="state"/>
                        <field name="prosecution_id" readonly="True"/>
                    </group>
                </form>
            </field>
        </record>

          <!-- TREE -->
        <record id="view_legal_audiences_tree" model="ir.ui.view">
            <field name="name">legal.audiences.tree</field>
            <field name="model">legal.audiences</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="type_id"/>
                    <field name="observations"/>
                    <field name="date"/>
                    <field name="state" readonly="True"/>
                    <button name="action_done" states="produced" string="Process" type="object" icon="gtk-go-back" help="Done" attrs="{'invisible':[('state','!=','produced')]}"/>
                    <button name="action_done" states="pending" string="Process" type="object" icon="gtk-go-forward" help="Done" attrs="{'invisible':[('state','!=','pending')]}"/>
                </tree>
            </field>
        </record>


    <record id="view_legal_audiences_calendar" model="ir.ui.view">
            <field name="name">legal.audiences.calendar</field>
            <field name="model">legal.audiences</field>
            <field name="arch" type="xml">
                <calendar string="Audiences" color="type_id" date_start="date">
                    <field name="type_id"/>
                    <field name="state"/>
                    <field name="prosecution_id"/>
                </calendar>
            </field>
        </record>

    </data>
</openerp>
