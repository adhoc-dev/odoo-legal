<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        
        <!-- FORM -->
        <record id="view_legal_claims_form" model="ir.ui.view">
            <field name="name">legal.claims.form</field>
            <field name="model">legal.claims</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="date_of_the_claim"/>
                        <field name="total_claim"/>
                        <field name="budget_for_coasts"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- TREE -->
        <record id="view_legal_claims_tree" model="ir.ui.view">
            <field name="name">legal.claims.tree</field>
            <field name="model">legal.claims</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date_of_the_claim"/>
                    <field name="budget_for_coasts"/>
                    <field name="total_claim"/>
                </tree>
            </field>
        </record>


    </data>
</openerp>
