<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        
        <!-- FORM -->
        <record id="view_legal_radication_form" model="ir.ui.view">
            <field name="name">legal.radication.form</field>
            <field name="model">legal.radication</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="d_formed"/>
                        <field name="legal_office"/>
                    </group>
                    <group colspan="2">
                        <group>
                            <field name="instance"/>
                            <field name="num_1_ins"/>
                            <field name="num_2_ins"/>
                        </group>
                        <group>
                            <field name="num_3_ins"/>
                            <field name="num_filed"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!-- TREE -->
        <record id="view_legal_radication_tree" model="ir.ui.view">
            <field name="name">legal.radication.tree</field>
            <field name="model">legal.radication</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="d_formed"/>
                    <field name="legal_office"/>
                </tree>
            </field>
        </record>


    </data>
</openerp>
