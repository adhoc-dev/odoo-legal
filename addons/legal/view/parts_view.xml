<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        
        <!-- FORM -->
        <record id="view_legal_parts_form" model="ir.ui.view">
            <field name="name">legal.parts.form</field>
            <field name="model">legal.parts</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="contact_id"/>
                        <field name="role"/>
                        <field name="age"/>
                        <field name="lawyer_id"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- TREE -->
        <record id="view_legal_parts_tree" model="ir.ui.view">
            <field name="name">legal.parts.tree</field>
            <field name="model">legal.parts</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="contact_id"/>
                    <field name="role"/>
                    <field name="age"/>
                    <field name="lawyer_id"/>
                </tree>
            </field>
        </record>


    </data>
</openerp>
