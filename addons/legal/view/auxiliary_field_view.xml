<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        
        <!-- FORM -->
        <record id="view_legal_auxiliary_form" model="ir.ui.view">
            <field name="name">legal.auxiliary.form</field>
            <field name="model">legal.auxiliary</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="auxiliary_field_id"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- TREE -->
        <record id="view_legal_auxiliary_tree" model="ir.ui.view">
            <field name="name">legal.auxiliary.tree</field>
            <field name="model">legal.auxiliary</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="auxiliary_field_id"/>
                    <field name="auxiliary_fields_value"/>
                </tree>
            </field>
        </record>


    </data>
</openerp>
