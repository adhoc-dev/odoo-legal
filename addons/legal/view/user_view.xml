<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        
        

        <!-- FORMVIEW -->
        <record id="view_users_form" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_simple_form"/>
            <field name="arch" type="xml">
                <field name="fax" position="after">
                    <field name="is_lawyer"/>
                </field>
            </field>
        </record>


         <!-- KANBAN -->
        <record model="ir.ui.view" id="view_users_kanban">
            <field name="name">res.users.kanban</field>
            <field name="model">res.users</field>
            <field name="secuence">10</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name='name'/>
                    <field name='phone'/>
                    <field name='image'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette oe_semantic_html_override">
                                <a type="open">
                                        <img t-att-src="kanban_image('res.users', 'image_small', record.id.value)" class="oe_kanban_image"/>
                                    
                                </a>
                                <div class="oe_kanban_details">
                                    <h4 class="oe_users_heading"><a type="open"><field name="name"/></a></h4>
                                    <div class="oe_kanban_users_links"/>
                                    <ul>
                                        <li t-if="record.phone and !record.phone"><field name="phone"/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
      

    </data>
</openerp>

